<Page x:Class="MYP.Admin.Privatization_A"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MYP.Admin"
      mc:Ignorable="d" 
      Title="Privatization_A" d:DesignHeight="600" d:DesignWidth="950">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Vertical" Margin="80 30 80 30">
                <TextBlock Text="Приватизация" FontWeight="Medium" FontSize="28" HorizontalAlignment="Center" FontFamily="IBM Plex Mono Medium"/>
                <TextBlock Style="{StaticResource textblock}" Text="Ссылка на документ с перечнем необходимых документов на приватизацию"/>
                <TextBox Style="{StaticResource RoundedTextBox_FixedHeight}" x:Name="link"/>
                <Button Style="{StaticResource RoundedButton}" Content="Сохранить" Width="180" Margin="0 30 0 0" Click="Button_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
